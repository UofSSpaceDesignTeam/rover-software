# settings tab
<SettingsScreen@BoxLayout>:
	GridLayout:
		cols: 4
		rows: 4
		col_default_width: root.size[0] / 4
		row_default_height: root.size[1] / 4
		spacing: 10
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: 0, 0, 0.5
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				id: TowerPos
				text: "Tower Position: " + "0" + "Â°"
				font_size: 20
			Button:
				text: "Calibrate"
				on_release: app.commThread.mailbox.put({"calibrate":1})
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: 0.4, 0, 0.4
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: "3D Vision System"
				font_size: 20
			BoxLayout:
				Button:
					text: "Jog L"
					on_release: app.commThread.mailbox.put({"towerJog":"L"})
				Button:
					text: "Jog R"
					on_release: app.commThread.mailbox.put({"towerJog":"R"})
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: 0.4, 0, 0.4
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: "3D Vision System"
				font_size: 20
			Button:
				text: "Center Camera"
				on_release: app.commThread.mailbox.put({"centerCameraButton":""})
				
