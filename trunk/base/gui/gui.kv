#Button Layout Class - BoxLayouts can be created from this
<LblTxtBtn@BoxLayout>:
	#Initialize Default Values
    l_text: '0default'
    t_text: '1default'
    b_text: '2default'
	
	#Initialize dynamic text
	o_text: 'default'

	#Default items and layout
    orientation: 'horizontal'
    Label:
        text: root.l_text
    TextInput:
		id: txt
        text: root.t_text
		multiline: False
    Button:
		id: btn
        text: root.b_text
		on_release: root.o_text = txt.text

<ArmButtons@BoxLayout>:
	b_text: 'default'
	#Default Function
	func: 'none'
	
	orientation: 'vertical'
	Button:
		id: btn
		text: root.b_text
		#Send function to print
		#TODO Make a function Handler
		on_release: app.buttonHandler(root.func)

#Master Layout Class
<AppLayout@BoxLayout>:
    orientation: 'vertical'
	
	######
	##TEST STUFF
	######
	#Custom properties to be passed between widgets
	#Output text
	str_prop0: ltb0.o_text
	str_prop1: ltb1.o_text
	
	#Copies of the LblTxtButn class
	#Each are given their own 'text' property
    LblTxtBtn:
		id: ltb0
        l_text: 'DynClassInput1:'
        t_text: 'Send Text To Second Box' #defined by custom property
        b_text: 'DynClassPressMe 1'
 
 
    LblTxtBtn:
		id: ltb1
        l_text: root.str_prop0 #This will be updated when ltb0 is updated
        t_text: 'hello'
        b_text: 'lalalal'
 
    LblTxtBtn:
		id: ltb2
        l_text: 'DynClassInput3:'
        t_text: 'DynClassDefault Text3'
        b_text: 'DynClassPressMe 3'
	
	
	#####
	##END TEST STUFF
	#####
	
	#Sets up two ArmButtons and adds them to the boxlayout
	ArmButtons:
		id: btn1
		b_text: 'Arm Camera'
		func: 'ac'
		
	ArmButtons:
		id: btn2
		b_text: 'Drive Camera'
		func: 'dc'
	
#Call Root Widget - Build the boxlayout	
AppLayout


