#Button Layout Class - BoxLayouts can be created from this
<LblTxtBtn@BoxLayout>:
	#Initialize Default Values
    l_text: '0default'
    t_text: '1default'
    b_text: '2default'

	#Default items and layout
    orientation: 'horizontal'
    Label:
        text: root.l_text
    TextInput:
		id: txt
        text: root.t_text
		multiline: False
    Button:
		id: btn
        text: root.b_text

<ArmButtons@GridLayout>:
	cols: 2
	b_text: 'default'
	#Default Function
	func: 'none'
	
	BoxLayout:
		orientation: 'vertical'
		Button:
			id: btn
			text: root.b_text
			#Send function to print
			on_release: app.buttonHandler(root.func)

		#Indicator

