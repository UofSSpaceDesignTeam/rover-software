<CoordinateDisplay@GridLayout>:
	l_text: 'default'
	
	orientation: 'vertical'
	Label:
		text: root.l_text
	
<ZoomButtons@GridLayout>:
	b_text: 'default'
	#Default Function
	func: 'none'
	
	orientation: 'vertical'
	Button:
		id: btn
		text: root.b_text
		#Send function to print
		#TODO Make a function Handler
		on_release: app.buttonHandler(root.func)
		
	#Indicator
	
<FunctionButtons@GridLayout>:
	b_text: 'default'
