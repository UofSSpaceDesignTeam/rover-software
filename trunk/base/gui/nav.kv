<AppLayout@BoxLayout>:
	FloatLayout:
	
		#make an image window in the background
		Video:
            source: 'http://fc09.deviantart.net/fs70/f/2012/209/0/0/elemental_nations_political_map_by_xshadowrebirthx-d58zgoq.png'
			state: 'play'
			pos: (0,-45)
			
		GridLayout:
			pos: (0,-45)
			cols: 3
			TabbedPanel:
				do_default_tab: False
				background_color: (0, 0, 0, 0)
				tab_pos: 'left_top'
				tab_width: 175
				
				TabbedPanelItem:
					text: 'Input'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						CoordinateInput:
					#		id: Input_Lat
					#		textinput: root.insert_text
							#func: add functionality
						CoordinateInput:
					#		id: Input_Long
					#		textinput: root.insert_text
							#func: add functionality
						Button:
							text: 'Enter Coordinates'
							#have the coordinates entered above be added as a dot on the image
							
				TabbedPanelItem:
					text: 'Current Coordinates'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						CoordinateDisplay:
							id: Display_Lat
							#make label display Latitude of Rover
							l_text:
						CoordinateDisplay:
							id: Display_Long
							#make label display Longitude of Rover
							l_text: 
							
			TabbedPanel:
				do_default_tab: False
				background_color: (0, 0, 0, 0)
				tab_pos: 'right_top'
				tab_width: 175
				
				TabbedPanelItem:
					text: 'Direction'
					BoxLayout:
						Label:
							text: 'A compass here would be nice'
				
				TabbedPanelItem:
					text: 'Zoom'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						ZoomButtons:
							id: btn_Zoom_In
							b_text: '+'
							#make the gui zoom in on the picture
						ZoomButtons:
							id: btn_Zoom_Out
							b_text: '-'
							#make the gui zoom out on the picture
							
				TabbedPanelItem:
					text: 'Functional Buttons'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						FunctionButtons:
							id: btn_Clear
							b_text: 'Clear Waypoints'
							#remove added way-points from the map						
						FunctionButtons:
							id: btn_Camera_Lock
							b_text: 'Lock/Unlock'
							#locks and unlocks the image to be moved
							#locked has rover centred
							#be nice if the button changed text depending on which was active
							
							
