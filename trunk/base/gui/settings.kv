# settings tab
<SettingsScreen@BoxLayout>:
	GridLayout:
		cols: 4
		rows: 4
		col_default_width: root.size[0] / 4
		row_default_height: root.size[1] / 4
		spacing: 10
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: 0, 0, 0.5
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: "Tower Aim: " + str(int(antennaAim.value)) + "Â°"
				font_size: 20
			Slider:
				id: antennaAim
				padding: 30
				min: -45
				max: 45
				value: 0
				step: 5
				on_value: app.commThread.mailbox.put({"towerAim":int(self.value)})
		BoxLayout:
			orientation: "vertical"
			canvas:
				Color:
					rgb: 0.4, 0, 0.4
				Rectangle:
					pos: self.pos
					size: self.size
			Label:
				text: "3D Vision System"
				font_size: 20
			Button:
				text: "Center Camera"
				on_release: app.commThread.mailbox.put({"centerCameraButton":""})

