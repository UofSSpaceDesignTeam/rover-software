
<ArmButtons@GridLayout>:
	cols: 2
	b_text: 'default'
	#Default Function
	func: 'none'
	ind: (1, 0, 0, 1)
	
	BoxLayout:
		orientation: 'vertical'
		Button:
			text: root.b_text
			#Run Button's Function
			on_release: app.buttonHandler(root.func)

	BoxLayout:
		orientation: 'vertical'
		Button:
			background_color: root.ind
			size_hint: (0.1, 1)
		

