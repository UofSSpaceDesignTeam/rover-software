#Master Layout Class
<AppLayout>:
	FloatLayout:
		#Make a video window in the background
		Video:
			id: videoScreen
			source: 'http://ctc.monroeccc.edu/mjpg/video.mjpg'
			state: 'play'
			allow_stretch: True
			on_loaded: root.ids.loadImg.color = (1,1,1,0)
			on_eos: root.ids.loadImg.color = (1,1,1,1)
		
		Image:
			id: loadImg
			allow_stretch: True
			keep_ratio: False
			source: 'gui/background.jpg'
			
		GridLayout:
			cols: 3
			TabbedPanel:
				do_default_tab: False
				background_color: (0, 0, 0, 0)
				tab_pos: 'left_top'
				tab_width: (root.size[1])/3

				TabbedPanelItem:
					text: 'Camera Buttons'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						ArmButtons:
							id: btn1
							b_text: 'Arm Camera'
							func: 'ac'

						ArmButtons:
							id: btn2
							b_text: 'Drive Camera'
							func: 'dc'
						
				TabbedPanelItem:
					text: 'Put Stuff Here'
					BoxLayout:
						pos: (100,-45)
						orientation: 'vertical'
						size_hint: .3,.3
						ArmButtons:
							id: btn4
							text: 'Arm/Rover'
							#clicking the button should switch between the two
						Label:
							text: 'The Drive Power and Steer Rate sliders should be here'
				TabbedPanelItem:
					text: 'Navigation'
					BoxLayout:
						Label:
							text: 'A compass here would be good'
					
			Label:
				text: ''
			
			TabbedPanel:
				do_default_tab: False
				background_color: (0, 0, 0, 0)
				tab_pos: 'right_top'
				tab_width: (root.size[1])/3

				TabbedPanelItem:
					tab_height: 100
					tab_width: 250
					text: 'Timer'
					orientation: 'vertical'
					size_hint: 1,.3

				TabbedPanelItem:
					text: 'More Stuff'
					BoxLayout:
						Label:
							text: 'Second tab content area'
						Button:
							text: 'Button that does nothing'
						
				TabbedPanelItem:
					text: 'Rover Controls'
					BoxLayout:
						orientation: 'vertical'
						size_hint: 1,.3
						Button:
							text: 'Dig'
						Button:
							text: 'Take Picture'
						Button:
							text: 'Science!'