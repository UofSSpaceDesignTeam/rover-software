# turret-mounted camera view tab (video player built in python)
<TurretScreen@FloatLayout>:
	# static background image
	Image:
		pos: (0, 0)
		id: loadImg
		size: root.size
		allow_stretch: True
		keep_ratio: False
		source: "gui/resource/loading.jpg"
	
	FloatLayout:
		id: controls
		# picture-taking button
		Button:
			pos: (root.size[0] / 2 - 35, root.size[1] - 40)
			size_hint: (None, None)
			size: (70, 25)
			text: "Capture"
			on_release: app.takePicture("turret")

# front-mounted camera view tab (video player built in python)
<DriveScreen@FloatLayout>:
	# static background image
	Image:
		pos: (0, 0)
		id: loadImg
		size: root.size
		allow_stretch: True
		keep_ratio: False
		source: "gui/resource/loading.jpg"
	
	FloatLayout:
		id: controls
		# picture-taking button
		Button:
			pos: (root.size[0] / 2 - 35, root.size[1] - 40)
			size_hint: (None, None)
			size: (70, 25)
			text: "Capture"
			on_release: app.takePicture("drive")
			
		ToggleButton:
			pos: (root.size[0] / 2 - 35, root.size[1] - 40)
			size_hint: (None, None)
			size: (70, 25)
			text: "Capture"
			on_release: app.takePicture("drive")
			
		GridLayout:
			pos: (root.size[0] / 2 - 200, root.size[1] - 50)
			size_hint: (None, None)
			size: (50, 50)
			rows: 2
			cols: 1
			
			Label:
				id: tracLabel
				text: "Traction Control Disabled"
			ToggleButton:
				text: "TRAC"
				on_release: app.tracMode()
			
		GridLayout:
			pos: (root.size[0] / 2 + 150, root.size[1] - 50)
			size_hint: (None, None)
			size: (50, 50)
			rows: 2
			cols: 1
			
			Label:
				id: drillLabel
				text: "Drill Mode Disabled"
			ToggleButton:
				text: "DRILL"
				on_release: app.drillMode()
				
<ExperimentControls>:
	FloatLayout:
		BoxLayout:
			pos: (root.size[0] / 2 - 150, 0)
			size_hint: (None, None)
			size: (300, 35)
			ToggleButton:
				text: "Laser 1"
				group: "laser"
			ToggleButton:
				text: "Laser 2"
				group: "laser"
			ToggleButton:
				text: "Laser 3"
				group: "laser"
				
		BoxLayout:
			pos: (root.size[0] / 2 - 400, 0)
			size_hint: (None, None)
			size: (200, 60)
			orientation: 'vertical'
			BoxLayout:
				ToggleButton:
					text: "Drill In!"
					group: "drill"
				ToggleButton:
					text: "Drill Out!"
					group: "drill"
			Slider:
				id: drillSpeed
				padding: 30
				value: 30
				step: 10
				on_value: app.commThread.mailbox.put({"drillspeed":self.value_normalized})
			
		BoxLayout:
			pos: (root.size[0] / 2 + 200, 0)
			size_hint: (None, None)
			size: (200, 60)
			orientation: 'vertical'
			BoxLayout:
				ToggleButton:
					group: "elev"
					text: "Move Up!"
				ToggleButton:
					group: "elev"
					text: "Move Down!"
			Slider:
				id: elevSpeed
				padding: 30
				value: 30
				step: 10
				on_value: app.commThread.mailbox.put({"elevspeed":self.value_normalized})
		

