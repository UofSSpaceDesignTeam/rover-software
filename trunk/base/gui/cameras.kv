			cols: 1
			
			Label:
				text: "Traction Control"
			Switch:
				active: False
			
		GridLayout:
			pos: (root.size[0] / 2 + 150, root.size[1] - 50)
			size_hint: (None, None)
			size: (50, 50)
			rows: 2
			cols: 1
			
			Label:
				text: "Drill Mode"
			Switch:
				active: False
				
<ExperimentControls>:
	BoxLayout:
		Button:
			text: "Laser 1"
