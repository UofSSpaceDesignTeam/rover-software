		Button:
			pos: (root.size[0] / 2 - 35, root.size[1] - 40)
			size_hint: (None, None)
			size: (70, 25)
			text: "Capture"
			on_release: app.takePicture("drive")
			
		GridLayout:
			pos: (root.size[0] / 2 - 200, root.size[1] - 50)
			size_hint: (None, None)
			size: (50, 50)
