
<TelemetryWidget>:

	#size: 500, 500
	#size_hint: 1, 1
	
	canvas:
        Color:
            rgba: .4, .4, 1, 1
        Line:
            points: self.points1
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
        Color:
            rgba: 1, .4, .4, 1
        Line:
            points: self.points2
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
        Color:
            rgba: 0, 1, 0, 1
        Line:
            points: self.points3
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False

    GridLayout:
        cols: 2
        size_hint: None, None
		#size: 200, 200
        #height: 44 * 5
		height: root.height * .5
		width: root.width

        GridLayout:
            cols: 3

            Label:
                text: ''
            Label:
                text: 'data'
            Label:
                text: 'max'

            Label:
                text: root.name1
            Label:
                text: str(root.data1)
            Label:
                text: str(root.max_data1)
            
            Label:
                text: root.name2
            Label:
                text: str(root.data2)
            Label:
                text: str(root.max_data2)

            Label:
                text: root.name3
            Label:
                text: str(root.data3)
            Label:
                text: str(root.max_data3)
                
        BoxLayout:
			#cols: 1
			#size_hint: None, None
			#size: self.minimum_size
			ToggleButton:
				size_hint: None, None
				#size: 100, 44
				text: 'Start'
				on_state: root.animate(self.state == 'down')

				
<TelemetryScreen@BoxLayout>:
	orientation: "horizontal"
	BoxLayout:
		TelemetryWidget:
			id: widget1
			name1: 'gx'
			name2: 'gy'
			name3: 'gz'
	
	BoxLayout:
		TelemetryWidget:
			id: widget2
			name1: '1'
			name2: '2'
			name3: '3'
	
	BoxLayout:
		TelemetryWidget:
			id: widget3
			name1: 'accelx'
			name2: 'accely'
			name3: 'accelz'
		
		


	
	



