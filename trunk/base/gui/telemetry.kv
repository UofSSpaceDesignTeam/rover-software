
<TelemetryWidget>:

	#size: 500, 500
	#size_hint: 1, 1
	
	canvas:
        Color:
            rgba: .4, .4, 1, 1
        Line:
            points: self.points1
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
        Color:
            rgba: 1, .4, .4, 1
        Line:
            points: self.points2
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
		Color:
            rgba: .4, 1, .4, 1
        Line:
            points: self.points4
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
        Color:
            rgba: 1, 0, 0, 1
        Line:
            points: self.points5
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
        Color:
            rgba: 0, 0, 1, 1
        Line:
            points: self.points6
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False
		Color:
            rgba: 1, 1, 0, 1
        Line:
            points: self.points7
            joint: 'miter'
            cap: 'round'
            width: 1
            close: False

    GridLayout:
        cols: 4
        size_hint: 1, 1
		#size: 200, 200
        height: 44 * 5
		#height: self.height * .5
		width: root.width

        GridLayout:
            cols: 4

            Label:
                text: ''
            Label:
                text: 'data'
            Label:
                text: 'max'
			Label:
                text: 'average'

            Label:
                text: 'pitch'
				color: .4, .4, 1, 1
            Label:
                text: str(root.data1)
            Label:
                text: str(root.max_data1)
			Label:
                text: str(root.avg_data1)
				
            
            Label:
                text: 'roll'
				color: 1, .4, .4, 1
            Label:
                text: str(root.data2)
            Label:
                text: str(root.max_data2)
			Label:
                text: str(root.avg_data2)

				
		GridLayout:
            cols: 4

            Label:
                text: ''
            Label:
                text: 'data'
            Label:
                text: 'max'
			Label:
                text: 'average'
				
            Label:
                text: 'ax'
				color: .4, 1, .4, 1
            Label:
                text: str(root.data4)
            Label:
                text: str(root.max_data4)
			Label:
                text: str(root.avg_data4)
            
            Label:
                text: 'ay'
				color: 1, 0, 0, 1
            Label:
                text: str(root.data5)
            Label:
                text: str(root.max_data5)
			Label:
                text: str(root.avg_data5)

            Label:
                text: 'az'
				color: 0, 0, 1, 1
            Label:
                text: str(root.data6)
            Label:
                text: str(root.max_data6)
			Label:
                text: str(root.avg_data6)

		GridLayout:
            cols: 4

            Label:
                text: ''
            Label:
                text: 'data'
            Label:
                text: 'max'
			Label:
                text: 'average'
				
            Label:
                text: 'vout'
				color: 1, 1, 0, 1
            Label:
                text: str(root.data7)
            Label:
                text: str(root.max_data7)
			Label:
                text: str(root.avg_data7)


			
        BoxLayout:
			#cols: 1
			#size_hint: None, None
			#size: self.minimum_size
			ToggleButton:
				size_hint: None, None
				#size: 100, 44
				text: 'Start'
				on_state: root.animate(self.state == 'down')
				
	FloatLayout:
		
			

			
				
				

				
<TelemetryScreen@BoxLayout>:
	#orientation: "horizontal"
	TelemetryWidget:
		id: telewidget

		
		


	
	



